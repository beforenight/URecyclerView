<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mrv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.mrv.role.MyRecyclerView
        android:id="@+id/main_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        mrv:divider="@drawable/recycle_view_divider"
        mrv:dividerLeftSpace="5"
        mrv:dividerRightSpace="5"
        mrv:dividerSpaceColor="@color/white"
        mrv:orientation="horizontal"
        mrv:spanCount="3"
        mrv:type="grid"/>

</LinearLayout>