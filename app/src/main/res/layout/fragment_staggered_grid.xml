<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mrv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.urv.widget.URecyclerView
        android:id="@+id/main_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        mrv:divider_background="@color/white"
        mrv:divider_drawable="@drawable/recycle_view_divider2"
        mrv:layoutManagerType="staggeredGrid"
        mrv:spanCount="3"/>

</LinearLayout>